{% comment %}
  Wishlist Drawer Component
  - Slide-out drawer for saved items
  - Populated via JS from localStorage
{% endcomment %}

<div id="WishlistDrawer" class="wishlist-drawer" aria-hidden="true">
  <div class="wishlist-drawer__header">
    <h2 class="wishlist-drawer__title">My Wishlist <span id="WishlistDrawerCount">(0)</span></h2>
    <button class="wishlist-drawer__close" aria-label="Close Wishlist">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
    </button>
  </div>
  
  <div class="wishlist-drawer__body" id="WishlistDrawerBody">
    <!-- Items injected here via JS -->
    <div class="wishlist-drawer__empty">
       <p>Your wishlist is empty.</p>
       <a href="/collections/all" class="btn btn-primary" onclick="closeWishlistDrawer()">Start Shopping</a>
    </div>
  </div>
  
  <div class="wishlist-drawer__footer">
    <button class="btn btn-secondary full-width" onclick="clearWishlist()">Clear All</button>
  </div>
</div>

<div id="WishlistOverlay" class="wishlist-overlay" aria-hidden="true"></div>

<style>
  .wishlist-drawer {
    position: fixed;
    top: 0;
    right: -400px; /* Hidden by default */
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background: #fff;
    box-shadow: -2px 0 12px rgba(0,0,0,0.1);
    z-index: 9999;
    transition: right 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
    display: flex;
    flex-direction: column;
  }
  .wishlist-drawer.open {
    right: 0;
  }
  
  .wishlist-overlay {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100vh;
    background: rgba(0,0,0,0.5);
    z-index: 9998;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s;
  }
  .wishlist-overlay.open {
    opacity: 1;
    visibility: visible;
  }
  
  .wishlist-drawer__header {
    padding: 20px;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .wishlist-drawer__title { margin: 0; font-size: 1.25rem; font-weight: 700; }
  .wishlist-drawer__close { background: none; border: none; cursor: pointer; padding: 5px; }
  
  .wishlist-drawer__body {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
  }
  
  .wishlist-item {
    display: flex;
    gap: 15px;
    padding-bottom: 15px;
    margin-bottom: 15px;
    border-bottom: 1px solid #f5f5f5;
  }
  .wishlist-item img {
    width: 80px; height: 80px;
    object-fit: cover;
    border-radius: 4px;
    border: 1px solid #eee;
  }
  .wishlist-item__info {
    flex: 1;
  }
  .wishlist-item__title {
    font-size: 0.95rem; font-weight: 600;
    margin: 0 0 5px;
    display: block;
  }
  .wishlist-item__price {
    font-size: 0.9rem; color: #555;
    margin-bottom: 8px;
  }
  .wishlist-item__remove {
    background: none; border: none;
    color: #e74c3c;
    font-size: 0.8rem;
    cursor: pointer;
    text-decoration: underline;
    padding: 0;
  }
  
  .wishlist-drawer__footer {
    padding: 20px;
    border-top: 1px solid #eee;
  }
  .full-width { width: 100%; }
</style>

<script>
  function openWishlistDrawer() {
     document.getElementById('WishlistDrawer').classList.add('open');
     document.getElementById('WishlistOverlay').classList.add('open');
     document.body.style.overflow = 'hidden'; // Lock scroll
     renderWishlistItems();
  }
  
  function closeWishlistDrawer() {
     document.getElementById('WishlistDrawer').classList.remove('open');
     document.getElementById('WishlistOverlay').classList.remove('open');
     document.body.style.overflow = '';
  }
  
  function renderWishlistItems() {
      const items = JSON.parse(localStorage.getItem('shopify-wishlist') || '[]');
      const container = document.getElementById('WishlistDrawerBody');
      const countLabel = document.getElementById('WishlistDrawerCount');
      
      countLabel.innerText = `(${items.length})`;
      
      if(items.length === 0) {
          container.innerHTML = `
            <div class="wishlist-drawer__empty text-center" style="margin-top: 50px;">
               <p>Your wishlist is empty.</p>
               <a href="/collections/all" class="btn btn-primary" onclick="closeWishlistDrawer()">Start Shopping</a>
            </div>`;
          return;
      }
      
      let html = '';
      items.forEach(item => {
          html += `
            <div class="wishlist-item">
               <a href="/products/${item.handle}"><img src="${item.image}" alt="${item.title}"></a>
               <div class="wishlist-item__info">
                   <a href="/products/${item.handle}" class="wishlist-item__title">${item.title}</a>
                   <div class="wishlist-item__price">${item.price}</div>
                   <button class="wishlist-item__remove" onclick="removeItemFromWishlist('${item.handle}')">Remove</button>
               </div>
            </div>
          `;
      });
      container.innerHTML = html;
  }
  
  function removeItemFromWishlist(handle) {
      // Re-use logic or define simple remover here
      let items = JSON.parse(localStorage.getItem('shopify-wishlist') || '[]');
      items = items.filter(i => i.handle !== handle);
      localStorage.setItem('shopify-wishlist', JSON.stringify(items));
      
      // Update UI
      window.dispatchEvent(new Event('wishlist-updated')); // Updates header icon
      renderWishlistItems(); // Re-renders drawer
      
      // Update toggle buttons if visible on page
      const btn = document.querySelector(`button[data-product-handle='${handle}']`);
      if(btn) {
          btn.classList.remove('active');
          btn.querySelector('svg').style.fill = 'none';
      }
  }
  
  function clearWishlist() {
      if(confirm('Are you sure you want to clear your wishlist?')) {
          localStorage.removeItem('shopify-wishlist');
          window.dispatchEvent(new Event('wishlist-updated'));
          renderWishlistItems();
          
          // Reset all buttons
          document.querySelectorAll('.pcm-wishlist-btn.active').forEach(btn => {
              btn.classList.remove('active');
              btn.querySelector('svg').style.fill = 'none';
          });
      }
  }
  
  // Event Listeners
  document.addEventListener('custom-wishlist:open', openWishlistDrawer); // Legacy/Fallback
  document.addEventListener('wishlist-drawer:open', openWishlistDrawer);
  
  document.querySelector('.wishlist-drawer__close').addEventListener('click', closeWishlistDrawer);
  document.getElementById('WishlistOverlay').addEventListener('click', closeWishlistDrawer);
</script>
