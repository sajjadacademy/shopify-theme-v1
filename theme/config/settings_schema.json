[
  {
    "name": "theme_info",
    "theme_name": "Google Antigravity Theme",
    "theme_author": "Antigravity",
    "theme_version": "1.0.0",
    "theme_documentation_url": "https://shopify.com"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Color",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
        "default": "#FF9900"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#1A1A1A"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border Color",
        "default": "#E5E5E5"
      },
      {
        "type": "color",
        "id": "color_success",
        "label": "Success Color",
        "default": "#28a745"
      },
      {
        "type": "color",
        "id": "color_warning",
        "label": "Warning Color",
        "default": "#ffc107"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Internal Heading Font",
        "default": "poppins_n6"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body Font",
        "default": "inter_n4"
      },
      {
        "type": "range",
        "id": "font_base_size",
        "min": 12,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Base Font Size",
        "default": 16
      },
      {
        "type": "range",
        "id": "button_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Button Corner Radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Spacing",
    "settings": [
      {
        "type": "range",
        "id": "section_padding_mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section Padding (Mobile)",
        "default": 20
      },
      {
        "type": "range",
        "id": "section_padding_desktop",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section Padding (Desktop)",
        "default": 40
      },
      {
        "type": "range",
        "id": "card_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Card Corner Radius",
        "default": 8
      },
      {
        "type": "range",
        "id": "shadow_intensity",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "%",
        "label": "Shadow Intensity",
        "default": 10
      }
    ]
  },
  {
    "name": "Trust Elements",
    "settings": [
      {
        "type": "select",
        "id": "badge_style",
        "label": "Badge Style",
        "options": [
          { "value": "pill", "label": "Pill" },
          { "value": "rounded", "label": "Rounded" },
          { "value": "square", "label": "Square" }
        ],
        "default": "rounded"
      },
      {
        "type": "color",
        "id": "star_color",
        "label": "Review Star Color",
        "default": "#FFBF00"
      }
    ]
  },
  {
    "name": "Buttons & UI",
    "settings": [
      {
        "type": "color",
        "id": "cta_color_primary",
        "label": "Primary CTA Color",
        "default": "#FF9900"
      },
      {
        "type": "checkbox",
        "id": "cta_secondary_outline",
        "label": "Use Outline for Secondary CTA",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "sticky_atc_enable",
        "label": "Enable Sticky Add to Cart (Mobile)",
        "default": true
      }
    ]
  }
]
