<div class="hero-section section section-{{ section.id }}-padding">
  <div class="hero-container {% if section.settings.layout == 'image_right' %}hero-reverse{% endif %}">
    
    <div class="hero__content">
      {% if section.settings.badge != blank %}
        <span class="hero__badge">{{ section.settings.badge }}</span>
      {% endif %}
      
      <h1 class="hero__title">{{ section.settings.heading }}</h1>
      <div class="hero__text">{{ section.settings.text }}</div>
      
      {% if section.settings.cta_text != blank %}
        <div class="hero__buttons">
          <a href="{{ section.settings.cta_link }}" class="btn btn-primary">{{ section.settings.cta_text }}</a>
          {% if section.settings.show_secondary_cta %}
             <a href="{{ section.settings.cta_secondary_link }}" class="btn btn-secondary">{{ section.settings.cta_secondary_text }}</a>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <div class="hero__image">
      <div class="hero__media media-desktop">
        {% if section.settings.image_desktop != blank %}
          {{ section.settings.image_desktop | image_url: width: 1400 | image_tag: loading: 'eager', width: 1400 }}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="hero__media media-mobile">
        {% if section.settings.image_mobile != blank %}
           {{ section.settings.image_mobile | image_url: width: 800 | image_tag: loading: 'eager', width: 800 }}
        {% elsif section.settings.image_desktop != blank %}
           {{ section.settings.image_desktop | image_url: width: 800 | image_tag: loading: 'eager', width: 800 }}
        {% else %}
           {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>
    
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .hero__media {
    position: relative;
    overflow: hidden;
    border-radius: var(--card-radius);
  }
  .hero__media img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .media-mobile { display: block; }
  .media-desktop { display: none; }
  
  .hero__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 0 1.5rem;
  }
  
  .hero__badge {
    display: inline-block;
    padding: 4px 12px;
    background: var(--color-accent);
    color: #fff;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .hero__title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.1;
  }
  
  .hero__buttons {
    margin-top: 1.5rem;
    display: flex;
    gap: 1rem;
  }

  @media screen and (min-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr 1fr;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }
    
    .hero-reverse .hero__content { order: 2; }
    .hero-reverse .hero__image { order: 1; }
    
    .media-mobile { display: none; }
    .media-desktop { display: block; }
    
    .hero__title { font-size: 3.5rem; }
  }
</style>

{% schema %}
{
  "name": "Split Hero",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "badge",
      "label": "Badge Text",
      "default": "New Arrival"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Premium Comfort"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Discover the best products for your lifestyle.</p>"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary Button",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Primary Link"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_cta",
      "label": "Show Secondary Button",
      "default": false
    },
    {
      "type": "text",
      "id": "cta_secondary_text",
      "label": "Secondary Button",
      "default": "Learn More"
    },
    {
       "type": "url",
       "id": "cta_secondary_link",
       "label": "Secondary Link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Desktop Layout",
      "options": [
        { "value": "image_right", "label": "Image Right" },
        { "value": "image_left", "label": "Image Left" }
      ],
      "default": "image_right"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Split Hero"
    }
  ]
}
{% endschema %}
