<div class="recently-viewed-section container">
    <h2 class="section-title">{{ section.settings.heading }}</h2>
    <div class="marketplace-grid" id="recently-viewed-grid">
        <!-- Server-Side Fallback: Prioritize user-selected collection, then contextual, then global -->
        {%- liquid
           if section.settings.collection != blank
              assign fallback_collection = collections[section.settings.collection]
           elsif product.collections.first != blank
              assign fallback_collection = product.collections.first
           else
              assign fallback_collection = collections['all']
           endif
        -%}

        {%- if fallback_collection.products_count > 0 -%}
           <!-- Simple offset randomization -->
           {%- assign offset = 'now' | date: "%S" | modulo: fallback_collection.products_count | minus: section.settings.products_to_show -%}
           {%- if offset < 0 %}{% assign offset = 0 %}{% endif -%}
           
           {%- assign count = 0 -%}
           {%- for item in fallback_collection.products offset: offset -%}
               {%- if item.id == product.id %}{% continue %}{% endif -%}
               
               {% render 'product-card-marketplace', 
                  product: item, 
                  show_rating: true, 
                  show_quick_add: true,
                  quick_add_type: 'button' 
               %}
               {%- assign count = count | plus: 1 -%}
               {%- if count >= section.settings.products_to_show %}{% break %}{% endif -%}
           {%- endfor -%}
        {%- else -%}
           <!-- Safe fallback empty state (hidden or minimal) -->
           <p class="text-center" style="grid-column: 1/-1; display:none;">No products looked at yet.</p>
        {%- endif -%}
    </div>
</div>

<script>
  (function() {
     const KEY = 'recently_viewed_handles';
     const LIMIT = {{ section.settings.products_to_show }};
     const currentHandle = "{{ product.handle }}";

     // 1. Update Storage
     let handles = JSON.parse(localStorage.getItem(KEY) || '[]');
     if(currentHandle && handles.indexOf(currentHandle) !== -1) {
        handles = handles.filter(h => h !== currentHandle);
     }
     if(currentHandle) {
        handles.unshift(currentHandle);
     }
     handles = handles.slice(0, 12);
     localStorage.setItem(KEY, JSON.stringify(handles));

     // 2. Fetch History (if available)
     // Use "search" trick or recommended products API if possible. Search is easiest for handle lookup.
     const displayHandles = handles.filter(h => h !== currentHandle).slice(0, LIMIT);

     if(displayHandles.length > 0) {
        const query = displayHandles.map(h => 'handle:' + h).join(' OR ');
        const url = `/search?view=recently&type=product&q=${encodeURIComponent(query)}`;
        
        fetch(url)
           .then(res => res.text())
           .then(html => {
              // Only replace if we actually got a grid back (requires search.recently.liquid template or similar response)
              // If the search view template isn't set up, this might fail, so we wrap somewhat safely.
              if(html.includes('product-card-marketplace')) {
                  const grid = document.getElementById('recently-viewed-grid');
                  if(grid) grid.innerHTML = html;
              }
           })
           .catch(err => {
              // Fail silently, leaving the Server-Side Fallback (Random Products) visible
              console.log('Using fallback history', err);
           });
     }
  })();
</script>

<style>
  .recently-viewed-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: 4rem;
    border-top: 1px solid #eee;
  }
  .section-title {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    font-weight: 700;
    text-align: center;
  }
  /* Reuse marketplace grid styles */
  .marketplace-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  @media screen and (min-width: 750px) {
    .marketplace-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Recently Viewed",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Recently Viewed",
      "label": "Heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Fallback Collection",
      "info": "Select a collection (e.g. Best Sellers) to show if the user has no viewing history."
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "label": "Padding Bottom"
    }
  ],
  "presets": [
     { "name": "Recently Viewed" }
  ]
}
{% endschema %}
