<div class="mobile-nav-wrapper">
  {% if section.settings.enable %}
  <nav class="mobile-nav">
    {%- for block in section.blocks -%}
      <a href="{{ block.settings.link }}" class="mobile-nav__item {% if request.path == block.settings.link %}active{% endif %}">
        <span class="mobile-nav__icon">
          {%- if block.settings.custom_icon != blank -%}
            {{ block.settings.custom_icon | image_url: width: 24 | image_tag }}
          {%- else -%}
            {%- render 'icon-dynamic', icon: block.settings.icon_name -%}
          {%- endif -%}
        </span>
        <span class="mobile-nav__label">{{ block.settings.label }}</span>
        {%- if block.settings.show_count and block.type == 'cart_link' -%}
          <span class="mobile-nav__count bubble">{{ cart.item_count }}</span>
        {%- endif -%}
      </a>
    {%- endfor -%}
  </nav>
  {% endif %}
</div>

<style>
  #shopify-section-{{ section.id }} .mobile-nav-wrapper {
    background-color: {{ section.settings.bg_color }};
  }
  #shopify-section-{{ section.id }} .mobile-nav__item.active,
  #shopify-section-{{ section.id }} .mobile-nav__item.active .mobile-nav__icon svg {
    color: {{ section.settings.active_color }};
    fill: {{ section.settings.active_color }};
  }
  /* Ensure it is visible and sticky on mobile */
  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .mobile-nav-wrapper {
      display: block;
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      z-index: 99999; /* Force top */
      box-shadow: 0 -4px 20px rgba(0,0,0,0.1); /* Stronger shadow */
      border-top: 1px solid rgba(0,0,0,0.05);
    }
  }
</style>

{% schema %}
{
  "name": "App Bottom Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "label": "Enable",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "active_color",
      "label": "Active Color",
      "default": "#ff9900"
    }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Menu Item",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Home"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "icon_name",
          "label": "Icon",
          "default": "home"
        },
        {
          "type": "image_picker",
          "id": "custom_icon",
          "label": "Custom Icon"
        }
      ]
    },
    {
      "type": "cart_link",
      "name": "Cart Icon",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Cart"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "icon_name",
          "label": "Icon",
          "default": "cart"
        },
         {
          "type": "checkbox",
          "id": "show_count",
          "label": "Count",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "App Bottom Bar",
      "blocks": [
        { "type": "nav_link" },
        { "type": "nav_link", "settings": { "label": "Shop", "icon_name": "grid" } },
        { "type": "cart_link" }
      ]
    }
  ]
}
{% endschema %}
