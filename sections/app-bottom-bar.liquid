<div class="mobile-nav-wrapper">
  {% if section.settings.enable %}
  <nav class="mobile-nav">
    {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link }}" class="mobile-nav__item {% if request.path == block.settings.link %}active{% endif %}">
          <span class="mobile-nav__icon">
            {%- if block.settings.custom_icon != blank -%}
              {{ block.settings.custom_icon | image_url: width: 24 | image_tag }}
            {%- else -%}
              {%- render 'icon-dynamic', icon: block.settings.icon_name -%}
            {%- endif -%}
          </span>
          <span class="mobile-nav__label">{{ block.settings.label }}</span>
          {%- if block.settings.show_count and block.type == 'cart_link' -%}
            <span class="mobile-nav__count bubble">{{ cart.item_count }}</span>
          {%- endif -%}
        </a>
      {%- endfor -%}
    {%- else -%}
      <!-- Default Fallback Links -->
      <a href="/" class="mobile-nav__item {% if request.path == '/' %}active{% endif %}">
        <span class="mobile-nav__icon">{% render 'icon-dynamic', icon: 'home' %}</span>
        <span class="mobile-nav__label">Home</span>
      </a>
      <a href="/collections" class="mobile-nav__item {% if request.path == '/collections' %}active{% endif %}">
        <span class="mobile-nav__icon">{% render 'icon-dynamic', icon: 'list' %}</span>
        <span class="mobile-nav__label">Categories</span>
      </a>
      <a href="/collections/all" class="mobile-nav__item {% if request.path == '/collections/all' %}active{% endif %}">
        <span class="mobile-nav__icon">{% render 'icon-dynamic', icon: 'shop' %}</span>
        <span class="mobile-nav__label">Shop</span>
      </a>
      <a href="/cart" class="mobile-nav__item {% if request.path == '/cart' %}active{% endif %}">
        <span class="mobile-nav__icon">
          {% render 'icon-dynamic', icon: 'cart' %}
          <span class="mobile-nav__count bubble">{{ cart.item_count }}</span>
        </span>
        <span class="mobile-nav__label">Cart</span>
      </a>
      <a href="/account" class="mobile-nav__item {% if request.path == '/account' %}active{% endif %}">
        <span class="mobile-nav__icon">{% render 'icon-dynamic', icon: 'account' %}</span>
        <span class="mobile-nav__label">My Account</span>
      </a>
    {%- endif -%}
  </nav>
  {% endif %}
</div>

<style>
  #shopify-section-{{ section.id }} .mobile-nav-wrapper {
    background-color: {{ section.settings.bg_color }};
  }
  #shopify-section-{{ section.id }} .mobile-nav__item {
    color: {{ section.settings.text_color }};
    padding: 5px;
    transition: all 0.3s ease;
  }
  #shopify-section-{{ section.id }} .mobile-nav__item.active {
    background-color: transparent !important;
  }
  #shopify-section-{{ section.id }} .mobile-nav__item.active .mobile-nav__icon svg {
    stroke: {{ section.settings.active_color }};
    fill: transparent;
    stroke-width: 1.5px; /* Ensure visibility */
  }
  /* Handle paths that might rely on fill - try to overriding color if needed, but user specifically asked for 'outer liner' (stroke) */
  #shopify-section-{{ section.id }} .mobile-nav__item.active .mobile-nav__icon svg path {
      stroke: {{ section.settings.active_color }};
      fill: transparent;
  }
  
  /* Red Cart Count Circle */
  .mobile-nav__count.bubble {
      position: absolute;
      top: -2px;
      right: -2px;
      background-color: #8B0000; /* Dark Red */
      color: #FFFFFF;
      font-size: 0.65rem;
      font-weight: 700;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      line-height: 1;
      z-index: 2;
  }
  .mobile-nav__icon { position: relative; }
  /* Ensure it is visible and sticky on mobile */
  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .mobile-nav-wrapper {
      display: block;
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      z-index: 99999; /* Force top */
      box-shadow: 0 -4px 20px rgba(0,0,0,0.1); /* Stronger shadow */
      border-top: 1px solid rgba(0,0,0,0.05);
    }
  }
</style>

{% schema %}
{
  "name": "App Bottom Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "label": "Enable",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#0E1B4D"
    },
    {
       "type": "color",
       "id": "text_color",
       "label": "Icon/Text Color",
       "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "active_color",
      "label": "Active Color",
      "default": "#D4AF37"
    }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Menu Item",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Home"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "icon_name",
          "label": "Icon",
          "default": "home"
        },
        {
          "type": "image_picker",
          "id": "custom_icon",
          "label": "Custom Icon"
        }
      ]
    },
    {
      "type": "cart_link",
      "name": "Cart Icon",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Cart"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "icon_name",
          "label": "Icon",
          "default": "cart"
        },
         {
          "type": "checkbox",
          "id": "show_count",
          "label": "Count",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "App Bottom Bar",
      "blocks": [
        { "type": "nav_link" },
        { "type": "nav_link", "settings": { "label": "Shop", "icon_name": "grid" } },
        { "type": "cart_link" }
      ]
    }
  ]
}
{% endschema %}
