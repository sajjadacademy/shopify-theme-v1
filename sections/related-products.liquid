<link rel="stylesheet" href="{{ 'component-card.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="related-products-section container" data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.products_to_show }}">
  {%- if recommendations.performed and recommendations.products_count > 0 -%}
    <h2 class="section-title">{{ section.settings.heading }}</h2>
    <div class="marketplace-grid">
      {%- for recommendation in recommendations.products -%}
         <!-- Reusing the existing styled card -->
         {% render 'product-card-marketplace', 
            product_card_product: recommendation, 
            show_rating: section.settings.show_rating, 
            show_quick_add: section.settings.enable_quick_add,
            quick_add_type: 'button' 
         %}
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

<script>
  const handleIntersection = (entries, observer) => {
    if (!entries[0].isIntersecting) return;
    observer.unobserve(entries[0].target);

    const relatedProductsSection = document.querySelector('.related-products-section');
    const url = relatedProductsSection.dataset.url;

    fetch(url)
      .then(response => response.text())
      .then(text => {
        const html = document.createElement('div');
        html.innerHTML = text;
        const recommendations = html.querySelector('.related-products-section');
        if (recommendations && recommendations.innerHTML.trim().length) {
          relatedProductsSection.innerHTML = recommendations.innerHTML;
        }
      })
      .catch(e => {
        console.error(e);
      });
  }

  document.addEventListener("DOMContentLoaded", function() {
    const relatedObserver = new IntersectionObserver(handleIntersection, {rootMargin: '0px 0px 400px 0px'});
    const relatedSection = document.querySelector('.related-products-section');
    if(relatedSection) relatedObserver.observe(relatedSection);
  });
</script>

<style>
  .related-products-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: 4rem;
    border-top: 1px solid #eee;
  }
  .section-title {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    font-weight: 700;
    text-align: center;
  }
  .marketplace-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Mobile: 2 cols */
    gap: 1.5rem;
  }
  @media screen and (min-width: 750px) {
    .marketplace-grid {
      grid-template-columns: repeat(4, 1fr); /* Desktop: 4 cols */
    }
  }
</style>

{% schema %}
{
  "name": "Related Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "You May Also Like",
      "label": "Heading"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": true,
      "label": "Show Rating"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "default": true,
      "label": "Enable Quick Add"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "label": "Padding Bottom"
    }
  ],
  "presets": [
    {
      "name": "Related Products"
    }
  ]
}
{% endschema %}
