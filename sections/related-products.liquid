<link rel="stylesheet" href="{{ 'component-card.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="related-products-section container section-{{ section.id }}-padding">
  <h2 class="section-title">{{ section.settings.heading }}</h2>
  
  <div class="marketplace-grid">
     {%- liquid
       assign products_to_show = section.settings.products_to_show
       
       # Determine Source Collection
       if section.settings.collection != blank
          assign source_collection = collections[section.settings.collection]
       else
          assign source_collection = product.collections.first
       endif
       
       # Gather products excluding current
       assign counter = 0
       
       # Randomize if possible (simple shuffle via liquid isn't native, so we use offset or just linear with exclusion)
       # Implementing a simple offset based on time or just standard loop skipping current
     -%}

     {%- if source_collection != blank -%}
        {%- assign collection_size = source_collection.products_count -%}
        {%- assign offset = 'now' | date: "%S" | modulo: collection_size | minus: products_to_show -%}
        {%- if offset < 0 %}{% assign offset = 0 %}{% endif -%}
        
        {%- for recommendation in source_collection.products offset: offset -%}
           {%- if recommendation.id == product.id -%}{% continue %}{%- endif -%}
           
           {% render 'product-card-marketplace', 
              product: recommendation, 
              show_rating: section.settings.show_rating, 
              show_quick_add: section.settings.enable_quick_add,
              quick_add_type: 'button' 
           %}
           
           {%- assign counter = counter | plus: 1 -%}
           {%- if counter >= products_to_show -%}{% break %}{%- endif -%}
        {%- endfor -%}
     {%- else -%}
        <!-- Fallback if no collection found (e.g. orphan product) -->
        <p class="text-center" style="grid-column: 1/-1;">No related products found.</p>
     {%- endif -%}
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
     border-top: 1px solid #eee;
     margin-top: 4rem;
  }
  .section-title {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    font-weight: 700;
    text-align: center;
  }
  .marketplace-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Mobile: 2 cols */
    gap: 1.5rem;
  }
  @media screen and (min-width: 750px) {
    .marketplace-grid {
      grid-template-columns: repeat(4, 1fr); /* Desktop: 4 cols */
    }
  }
</style>

{% schema %}
{
  "name": "Related Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "You May Also Like",
      "label": "Heading"
    },
    {
       "type": "collection",
       "id": "collection",
       "label": "Source Collection",
       "info": "Select a specific collection (e.g. Daily Deals) to show on all product pages. Leave blank to show products from the current product's collection."
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": true,
      "label": "Show Rating"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "default": true,
      "label": "Enable Quick Add"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "label": "Padding Bottom"
    }
  ],
  "presets": [
    {
      "name": "Related Products"
    }
  ]
}
{% endschema %}
