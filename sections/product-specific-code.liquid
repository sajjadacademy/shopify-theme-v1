{% comment %}
  Product Specific Custom Code Section
  - Allows adding global code (all products)
  - Allows adding product-specific code blocks (videos, reviews, etc.)
  - Logic matches block product to current product to render
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  .product-custom-code-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    width: 100%;
    padding: 0 1.5rem;
  }
  
  .custom-code-block {
     margin-bottom: 2rem;
  }
{%- endstyle -%}

<div class="product-custom-code section-{{ section.id }}-padding">
  <div class="product-custom-code-container">
    
    {%- comment -%} 1. Global Code (Applied to All Products) {%- endcomment -%}
    {%- if section.settings.global_liquid != blank -%}
      <div class="global-custom-code custom-code-block">
        {{ section.settings.global_liquid }}
      </div>
    {%- endif -%}

    {%- comment -%} 2. Specific Product Blocks {%- endcomment -%}
    {%- for block in section.blocks -%}
      {%- if block.settings.target_product != blank and block.settings.target_product == product.handle -%}
         <div class="specific-custom-code custom-code-block" {{ block.shopify_attributes }}>
            {{ block.settings.custom_code }}
         </div>
      {%- endif -%}
    {%- endfor -%}
    
  </div>
</div>

{% schema %}
{
  "name": "Product Specific Code",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Global Settings"
    },
    {
      "type": "liquid",
      "id": "global_liquid",
      "label": "Global Custom Code",
      "info": "This code will appear on ALL product pages where this section is added."
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 1600,
      "step": 40,
      "default": 1200,
      "unit": "px",
      "label": "Container Width"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px",
      "label": "Top padding"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px",
      "label": "Bottom padding"
    }
  ],
  "blocks": [
    {
      "type": "specific_code",
      "name": "Specific Product Code",
      "settings": [
        {
          "type": "product",
          "id": "target_product",
          "label": "Select Product",
          "info": "This code will ONLY show when viewing this specific product."
        },
        {
          "type": "liquid",
          "id": "custom_code",
          "label": "Custom Code (HTML/Liquid)",
          "info": "Add your video embed, reviews code, or custom HTML here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Specific Code"
    }
  ]
}
{% endschema %}
