<div class="trust-row section section-{{ section.id }}-padding">
  <div class="container">
    <div class="trust-grid">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="trust-item">
            <div class="trust-icon">
              {% if block.settings.custom_icon != blank %}
                 {{ block.settings.custom_icon | image_url: width: 40 | image_tag }}
              {% else %}
                 {% render 'icon-dynamic', icon: 'check' %}
              {% endif %}
            </div>
            <div class="trust-text">
              <h4>{{ block.settings.heading }}</h4>
              <p>{{ block.settings.subtext }}</p>
            </div>
          </div>
        {% elsif block.type == 'custom_liquid' %}
          <div class="trust-item trust-custom-liquid" style="background: transparent; border: none; padding: 0;">
             {{ block.settings.custom_liquid }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.bg_color }};
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .trust-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .trust-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: {{ section.settings.card_bg_color }};
    border-radius: var(--card-radius);
    border: 1px solid var(--color-border);
  }
  
  .trust-icon svg {
    width: 32px;
    height: 32px;
    color: var(--color-primary);
  }
  
  .trust-text h4 {
    margin: 0;
    font-size: 1rem;
  }
  .trust-text p {
    margin: 0;
    font-size: 0.85rem;
    color: #666;
  }

  @media screen and (min-width: 768px) {
    .trust-grid {
      flex-direction: row;
      justify-content: space-between;
    }
    .trust-item {
      flex: 1;
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Trust Row",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card Background",
      "default": "#f9f9f9"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Subtext",
          "default": "On all orders over $50"
        },
        {
           "type": "image_picker",
           "id": "custom_icon",
           "label": "Custom Icon"
        }
      ]
    }
    },
    {
      "type": "custom_liquid",
      "name": "Custom Liquid",
      "settings": [
        {
          "type": "liquid",
          "id": "custom_liquid",
          "label": "Custom Liquid"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Row",
      "blocks": [
        { "type": "feature", "settings": { "heading": "Free Shipping" } },
        { "type": "feature", "settings": { "heading": "Secure Payment" } },
        { "type": "feature", "settings": { "heading": "24/7 Support" } }
      ]
    }
  ]
}
{% endschema %}
