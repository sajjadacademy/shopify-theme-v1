<div class="featured-collection section section-{{ section.id }}-padding">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="section-heading {{ section.settings.heading_alignment }}">
        <h2 class="h3">{{ section.settings.heading }}</h2>
        {% if section.settings.show_view_all and section.settings.collection != blank %}
          <a href="{{ section.settings.collection.url }}" class="link-underlined">View All</a>
        {% endif %}
      </div>
    {% endif %}

    <div class="product-grid-wrapper {% if section.settings.mobile_layout == 'carousel' %}mobile-scroll{% endif %} {% if section.settings.desktop_layout == 'carousel' %}desktop-scroll{% endif %}">
      {%- assign collection = collections[section.settings.collection] -%}
      <ul class="product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down">
        {%- for product in collection.products limit: section.settings.products_to_show -%}
          <li class="grid__item">
           <li class="grid__item">
               {% render 'product-card-marketplace', 
                  product: product,
                  show_rating: section.settings.show_rating,
                  show_badge: section.settings.show_badge,
                  show_wishlist: section.settings.show_wishlist,
                  show_quick_add: section.settings.show_quick_add,
                  quick_add_type: 'button',
                  enable_fake_discount: section.settings.enable_fake_discount,
                  fake_discount_percentage: section.settings.fake_discount_percentage,
                  enable_random_reviews: true,
                  random_review_min: 100,
                  random_review_max: 5000
               %}
           </li>
          </li>
        {%- else -%}
          <!-- Placeholder Loop -->
          {%- for i in (1..6) -%}
            <li class="grid__item">
              <div class="product-card noon-style">
                 <div class="product-card__image-wrapper placeholder">
                    {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
                 </div>
                 <div class="product-card__info">
                   <h3 class="product-card__title">Example Product</h3>
                   <div class="product-card__price">AED 49.99</div>
                 </div>
              </div>
            </li>
          {%- endfor -%}
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }
  .section-heading { margin-bottom: 24px; display: flex; align-items: baseline; gap: 1rem; }
  .section-heading.center { justify-content: center; text-align: center; }
  .section-heading.left { justify-content: space-between; }
  
  /* STRICT GRID LAYOUT (Dynamic) */
  .product-grid {
    display: grid !important;
    list-style: none !important;
    padding: 0 !important; margin: 0 !important;
    width: 100% !important;
  }
  
  .grid__item {
    width: 100% !important;
    max-width: 100% !important;
  }

  /* Mobile: Dynamic Columns & Gap */
  @media screen and (max-width: 767px) {
    .product-grid {
       grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr) !important;
       gap: {{ section.settings.grid_gap_mobile }}px !important;
    }
  }

  /* Desktop/Tablet: Dynamic Columns & Gap */
  @media screen and (min-width: 768px) {
    .product-grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr) !important;
      gap: {{ section.settings.grid_gap }}px !important;
    }
  }

  /* Scoped Variables to Match Daily Deals Compactness */
  #shopify-section-{{ section.id }} .product-card-marketplace {
    --card-radius: 8px;
    --color-border: #e0e0e0;
    --card-padding: 8px; /* Compact padding */
    
    /* Typography */
    --card-title-size: 13px; /* Compact text */
    --card-title-weight: 600;
    
    /* Colors */
    --color-primary: {{ section.settings.button_bg_color }};
    --color-warning: #FFA41C;
  }
</style>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Recommended for you"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 4,
      "default": 8,
      "label": "Products to show"
    },
    {
       "type": "header",
       "content": "Desktop Layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Desktop Columns"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 40,
      "step": 2,
      "default": 8,
      "label": "Grid Spacing (Gap)"
    },
    {
       "type": "header",
       "content": "Mobile Layout"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Grid Columns",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" }
      ],
      "default": "2"
    },
    {
       "type": "range",
       "id": "grid_gap_mobile",
       "min": 0,
       "max": 20,
       "step": 2,
       "default": 8,
       "label": "Mobile Spacing"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Enable 'View all' link"
    },
    { "type": "header", "content": "Card Settings" },
    { "type": "checkbox", "id": "show_rating", "label": "Show Ratings", "default": true },
    { "type": "checkbox", "id": "show_badge", "label": "Show Badges", "default": true },
    { "type": "checkbox", "id": "show_wishlist", "label": "Show Wishlist", "default": true },
    { "type": "checkbox", "id": "show_quick_add", "label": "Show Quick Add", "default": true },
    { "type": "select", "id": "quick_add_type", "label": "Quick Add Style", "options": [
       { "value": "icon", "label": "Icon (+)" },
       { "value": "button", "label": "Button (Text)" }
    ], "default": "button" },
    { "type": "checkbox", "id": "enable_fake_discount", "label": "Enable Artificial Discount", "default": true },
    { "type": "range", "id": "fake_discount_percentage", "min": 5, "max": 50, "step": 5, "default": 10, "label": "Artificial Inflation %" },
    
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
       "type": "color",
       "id": "button_bg_color",
       "label": "Button Background",
       "default": "#111827"
    },
    {
       "type": "color",
       "id": "button_text_color",
       "label": "Button Text",
       "default": "#ffffff"
    },
    {
       "type": "color",
       "id": "badge_bg_color",
       "label": "Badge Background",
       "default": "#DC2626"
    },
    {
       "type": "color",
       "id": "badge_text_color",
       "label": "Badge Text",
       "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Top Padding", "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Bottom Padding", "default": 36
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
