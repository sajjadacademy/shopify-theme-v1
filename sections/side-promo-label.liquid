{%- if section.settings.enable_label -%}
<div id="SidePromoLabel" class="side-promo-label hidden-label">
  <span class="label-text">{{ section.settings.text }}</span>
  <span class="close-btn" onclick="closePromoLabel(event)">Ã—</span>
</div>

<div id="PromoToast" class="promo-toast">Code Copied!</div>

<style>
  .side-promo-label {
    position: fixed;
    top: {{ section.settings.vertical_offset }}%;
    {% if section.settings.position == 'left' %}
      left: 0;
      border-radius: 0 0 8px 8px;
    {% else %}
      right: 0;
      border-radius: 8px 8px 0 0;
    {% endif %}
    z-index: 9999;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: 16px 10px;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    transform: translateY(-50%) {% if section.settings.position == 'right' %} rotate(180deg) {% endif %};
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0,0,0,0.3);
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 2px solid rgba(255,255,255,0.1);
  }

  .side-promo-label.hidden-label {
      display: none !important;
  }

  .side-promo-label:hover {
    background-color: {{ section.settings.text_color }};
    color: {{ section.settings.background_color }};
  }

  .close-btn {
    font-size: 1.4rem;
    line-height: 1;
    margin-bottom: 10px; /* Vertical orientation means this pushes it 'up' visually or along axis */
    padding: 4px;
    opacity: 0.7;
    transition: opacity 0.2s;
  }
  .close-btn:hover { opacity: 1; font-weight: 900; }
  
  /* Toast Notification */
  .promo-toast {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0.9);
      background: rgba(0,0,0,0.9);
      color: #fff;
      padding: 15px 30px;
      border-radius: 8px;
      z-index: 10000;
      opacity: 0;
      pointer-events: none;
      transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  .promo-toast.show {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
  }

  /* Mobile Adjustment */
  @media screen and (max-width: 768px) {
    .side-promo-label {
      font-size: 0.85rem;
      padding: 12px 8px;
    }
    .close-btn { font-size: 1.2rem; margin-bottom: 8px; }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
      const label = document.getElementById('SidePromoLabel');
      if (sessionStorage.getItem('promoLabelClosed') === 'true') {
          label.classList.add('hidden-label');
      } else {
          label.classList.remove('hidden-label');
      }

      label.addEventListener('click', function(e) {
         if(e.target.classList.contains('close-btn')) return;
         
         const code = "{{ section.settings.coupon_code }}";
         if(code) {
             navigator.clipboard.writeText(code).then(() => {
                 showToast();
             });
         }
      });
  });
  
  function closePromoLabel(e) {
      e.stopPropagation();
      const label = document.getElementById('SidePromoLabel');
      label.classList.add('hidden-label');
      sessionStorage.setItem('promoLabelClosed', 'true');
  }

  function showToast() {
      const toast = document.getElementById('PromoToast');
      toast.classList.add('show');
      setTimeout(() => {
          toast.classList.remove('show');
      }, 2000);
  }
</script>
{%- endif -%}

{% schema %}
{
  "name": "Side Promo Label",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_label",
      "label": "Enable Label",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Label Text",
      "default": "GET 10% OFF"
    },
    {
      "type": "text",
      "id": "coupon_code",
      "label": "Coupon Code to Copy",
      "default": "SALE10",
      "info": "This code will be copied to clipboard when clicked."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#0b1c3c"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Screen Side",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "right"
    },
    {
      "type": "range",
      "id": "vertical_offset",
      "min": 10,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Vertical Position (from Top)",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Side Promo Label"
    }
  ]
}
{% endschema %}
