<footer class="footer section-{{ section.id }}-padding">
  <div class="container">
    <div class="footer__grid">
      {%- for block in section.blocks -%}
        <div class="footer__block footer__block--{{ block.type }}">
          
          {%- if block.type == 'link_list' -%}
            <div class="footer-menu-accordion">
              <h4 class="footer__heading">
                {{ block.settings.heading }}
              </h4>
              <ul class="footer__list">
                {%- for link in block.settings.menu.links -%}
                  <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
                {%- endfor -%}
              </ul>
            </div>
            
          {%- elsif block.type == 'brand_info' -%}
            <div class="footer__brand-block">
              {% if block.settings.logo != blank %}
                {{ block.settings.logo | image_url: width: block.settings.logo_width | image_tag: class: 'footer__logo', loading: 'lazy' }}
              {% else %}
                <h3 class="h4">{{ shop.name }}</h3>
              {% endif %}
              <div class="footer__rte">{{ block.settings.motivational_text }}</div>
              {% if block.settings.custom_liquid != blank %}
                 <div class="footer__custom-liquid">{{ block.settings.custom_liquid }}</div>
              {% endif %}
            </div>

          {%- elsif block.type == 'contact_info' -%}
            <div class="footer__contact-block">
              <h4 class="footer__heading">{{ block.settings.heading }}</h4>
               <div class="social-icons" style="margin-top: 1rem;">
                 {%- if settings.social_facebook_link != blank -%}
                   <a href="{{ settings.social_facebook_link }}" class="social-link" title="Facebook" target="_blank">
                     <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
                   </a>
                 {%- endif -%}
                 {%- if settings.social_instagram_link != blank -%}
                   <a href="{{ settings.social_instagram_link }}" class="social-link" title="Instagram" target="_blank">
                     <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                   </a>
                 {%- endif -%}
                 {%- if settings.social_tiktok_link != blank -%}
                   <a href="{{ settings.social_tiktok_link }}" class="social-link" title="TikTok" target="_blank">
                     <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg>
                   </a>
                 {%- endif -%}
                 {%- if settings.social_youtube_link != blank -%}
                   <a href="{{ settings.social_youtube_link }}" class="social-link" title="YouTube" target="_blank">
                     <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33zM9.75 15.02V8.5l5.75 3.23z"/></svg>
                   </a>
                 {%- endif -%}
                 {%- if settings.social_twitter_link != blank -%}
                   <a href="{{ settings.social_twitter_link }}" class="social-link" title="Twitter / X" target="_blank">
                     <svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                   </a>
                 {%- endif -%}
                 {%- if settings.social_snapchat_link != blank -%}
                   <a href="{{ settings.social_snapchat_link }}" class="social-link" title="Snapchat" target="_blank">
                     <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 2.5a6.5 6.5 0 0 0-11 5c0 2 1.5 4.5 3.5 6 .5 1 .5 2.5-.5 3.5-1.5 1-4 1-4 2s2 2 8 2 8-1.5 8-2-2.5-1-4-2c-1-1-1-2.5-.5-3.5 2-1.5 3.5-4 3.5-6a6.5 6.5 0 0 0-4.5-6Z"/></svg>
                   </a>
                 {%- endif -%}
                 {%- if settings.social_pinterest_link != blank -%}
                   <a href="{{ settings.social_pinterest_link }}" class="social-link" title="Pinterest" target="_blank">
                     <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor"><path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.399.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.951-7.252 4.173 0 7.41 2.967 7.41 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.354-.629-2.758-1.379l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.607 0 11.985-5.365 11.985-11.987C23.97 5.367 18.62 0 12.017 0z"/></svg>
                   </a>
                 {%- endif -%}
               </div>
              
              {% if block.settings.custom_liquid != blank %}
                 <div class="footer__custom-liquid" style="margin-bottom: 1rem;">{{ block.settings.custom_liquid }}</div>
              {% endif %}
              
              {% if block.settings.address != blank %}
                <div class="footer__address">
                  <p>{{ block.settings.address | newline_to_br }}</p>
                </div>
              {% endif %}
              

            </div>
          {%- elsif block.type == 'custom_liquid_block' -%}
             <div class="footer__custom-liquid-block">
                {{ block.settings.custom_liquid }}
             </div>
          {%- endif -%}
          
        </div>
      {%- endfor -%}
    </div>
    
    <div class="footer__bottom">
      <div class="copyright">
        &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: routes.root_url }}.
      </div>
    </div>
  </div>
</footer>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
  }
  
  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .footer__heading {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 1rem;
    display: flex;
    justify-content: space-between;
    cursor: pointer;
  }
  .footer__heading svg { transition: transform 0.3s; width: 12px; height: 12px; }
  
  .footer__list { list-style: none; padding: 0; margin: 0; }
  .footer__list li { margin-bottom: 0.5rem; }
  .footer__link { color: inherit; text-decoration: none; opacity: 0.8; }
  /* Inverse hover for footer links */
  .footer__link:hover {
    background-color: #FFFFFF;
    color: {{ section.settings.bg_color }}; /* Use BG color as text color for inverse effect */
    text-decoration: none;
    padding: 2px 6px;
    border-radius: 4px;
    opacity: 1;
  }
  
  .footer__bottom {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255,255,255,0.1);
    text-align: center;
    font-size: 0.9rem;
    opacity: 0.7;
  }

  /* Desktop */
  @media screen and (min-width: 768px) {
     .footer__grid {
       grid-template-columns: repeat({{ section.blocks.size }}, 1fr);
     }
     .footer__heading { pointer-events: none; }
     .desktop-hidden { display: none; }
  }

  /* Mobile Accordion */
  /* Mobile Accordion Removed - List always visible */
  @media screen and (max-width: 767px) {
    .footer__list {
      display: block; 
      padding-left: 0; /* Optional: remove indent if not needed, keeping it 0 for now or same as desktop */
    }
  }
  /* New Footer Styles */
  .footer__logo { display: block; margin-bottom: 1rem; }
  
  .payment-icons, .social-icons { display: flex; gap: 8px; margin-bottom: 1rem; }
  .icon-payment { 
    background: #fff; color: #333; padding: 2px 6px; border-radius: 4px; font-size: 0.8rem; font-weight: bold; border: 1px solid #ccc; 
  }
  .social-link {
    color: inherit; border: 1px solid rgba(255,255,255,0.2); width: 32px; height: 32px;
    display: flex; align-items: center; justify-content: center; border-radius: 50%; text-decoration: none;
    transition: all 0.2s;
  }
  .social-link:hover { background: #fff; color: #000; }
  
  .footer__address p { margin: 0; line-height: 1.5; opacity: 0.8; }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
       "type": "range",
       "id": "padding_top",
       "min": 0, "max": 100, "step": 4, "unit": "px", "default": 60, "label": "Top Padding"
    },
    {
       "type": "range",
       "id": "padding_bottom",
       "min": 0, "max": 100, "step": 4, "unit": "px", "default": 60, "label": "Bottom Padding"
    }
  ],
  "blocks": [
    {
      "type": "brand_info",
      "name": "Brand Info",
      "limit": 1,
      "settings": [
        { "type": "image_picker", "id": "logo", "label": "Footer Logo" },
        { "type": "range", "id": "logo_width", "min": 50, "max": 250, "step": 5, "default": 120, "label": "Logo Width" },
        { "type": "richtext", "id": "motivational_text", "label": "Motivational Text", "default": "<p>Empowering your lifestyle with premium products.</p>" },
        { "type": "liquid", "id": "custom_liquid", "label": "Custom Liquid", "info": "Add embedded custom code." }
      ]
    },
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        { "type": "text", "id": "heading", "default": "Quick Links", "label": "Heading" },
        { "type": "link_list", "id": "menu", "default": "footer", "label": "Menu" }
      ]
    },
    {
      "type": "contact_info",
      "name": "Contact & Trust",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "heading", "default": "Get in Touch", "label": "Heading" },
        { "type": "textarea", "id": "address", "label": "Address", "default": "123 Commerce St, Dubai, UAE" },

        { "type": "liquid", "id": "custom_liquid", "label": "Custom Liquid", "info": "Add embedded custom code." }
      ]
    },
    {
      "type": "custom_liquid_block",
      "name": "Custom Liquid",
      "settings": [
        { "type": "liquid", "id": "custom_liquid", "label": "Custom Liquid" }
      ]
    }
  ],
  "max_blocks": 8,
}
{% endschema %}
