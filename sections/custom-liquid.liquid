<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="section-group">
    {%- comment -%} 1. Global Code {%- endcomment -%}
    {%- if section.settings.custom_liquid != blank -%}
      {{ section.settings.custom_liquid }}
    {%- endif -%}

    {%- comment -%} 2. Product Specific Code Blocks {%- endcomment -%}
    {%- for block in section.blocks -%}
      {%- if block.settings.chosen_product != blank -%}
         {%- if block.settings.chosen_product == product.handle -%}
            <div class="specific-custom-code custom-code-block" {{ block.shopify_attributes }}>
               {{ block.settings.custom_code }}
            </div>
         {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
    
    {%- if section.settings.custom_liquid == blank and section.blocks.size == 0 -%}
      <div class="page-width">
        <div class="center">
          Add custom Liquid code in the section settings or add a block for specific products.
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

{% schema %}
{
  "name": "Custom Liquid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "Global Custom Liquid",
      "info": "This code will appear on ALL product pages where this section is added."
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "inverse", "label": "Inverse" }
      ],
      "default": "background-1",
      "label": "Color Scheme"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "specific_code",
      "name": "Specific Product Code",
      "settings": [
        {
          "type": "product",
          "id": "chosen_product",
          "label": "Select Product",
          "info": "This code will ONLY show when viewing this specific product."
        },
        {
          "type": "liquid",
          "id": "custom_code",
          "label": "Specific Custom Code",
          "info": "Add video/reviews/etc just for this product."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Liquid",
      "blocks": []
    }
  ]
}
{% endschema %}
